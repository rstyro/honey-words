
.honey-item{
	margin: 10rpx;
	padding: 0rpx 10px 10rpx 10px;
	background: #fff;
	border-radius: 5rpx;
}
.honey-item-top{
	font-size: 24rpx;
	line-height: 24rpx;
	padding: 10rpx 0rpx 10rpx 0rpx;
}
.honey-item-time{
	color: #ccc;
	text-align: left;
}
.honey-item-name{
	color: #ccc;
	text-align: right;
}
.honey-item-content{
	color: #222;
	font-size: 36rpx;
	display: block;
	font-weight: 500;
}
.honey-item-bottom{
	margin-top: 30rpx;
}
.honey-item-icon{
	width: 32rpx;
	height: 32rpx;
	vertical-align: middle;
}
.honey-item-praise{
	display: inline-block;
	font-size: 0;
	background-color: #37C6C0;
	padding: 8rpx 30rpx;
	border-radius: 4rpx;
	margin-right: 15rpx;
}
.honey-item-praise view{
	color: #fff;
	line-height: 32rpx;
	font-size: 24rpx;
	vertical-align: middle;
	display: inline-block;
	margin-left: 10rpx;
}
.honey-item-collect{
	  display: inline-block;
	  font-size: 0;
	  background-color: #37C6C0;
	  padding: 8rpx 25rpx;
	  border-radius: 4rpx;
	  margin-left: 30rpx;
}





.content{
	background: #efeff1;
}
.honey-list-box{
	width: 100%;
	padding-top: 80rpx;
	padding-bottom: 5rpx;
}

